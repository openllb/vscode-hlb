{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"${workspaceFolder}/sampleWorkspace"
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"stopOnEntry": true,
			"sourceMaps": true,
			"smartStep": true,
			"preLaunchTask": "npm: bundle-dev"
		}
	]
}
